<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/action_icon"
        android:layout_width="@dimen/bar_action_icon_size"
        android:layout_height="@dimen/bar_action_icon_size"
        android:layout_gravity="center_vertical"
        android:layout_marginBottom="@dimen/bar_action_item_padding_vertical"
        android:layout_marginEnd="5dp"
        android:layout_marginStart="@dimen/bar_action_item_padding_horizontal"
        android:layout_marginTop="@dimen/bar_action_item_padding_vertical"
        android:scaleType="fitCenter"
        app:srcCompat="@drawable/awsb_ic_edit_animated"
        tools:background="@android:color/black"
        android:contentDescription="@string/action_item" />

    <TextView
        android:id="@+id/action_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:text=""
        android:textColor="@android:color/white"
        android:textStyle="bold"
        android:layout_marginEnd="@dimen/bar_action_item_padding_horizontal" />

</LinearLayout>