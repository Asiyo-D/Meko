<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="PagerIndicator">
        <attr name="selectedDrawable" format="reference" />
        <attr name="unSelectedDrawable" format="reference" />
        <attr name="indicatorSize" format="dimension" />
        <attr name="indicatorSelectedSize" format="dimension" />
        <attr name="paddingBetweenIndicators" format="dimension" />
        <attr name="numberOfIndicators" format="integer" />
        <attr name="selectedIndicator" format="integer" />
    </declare-styleable>

    <declare-styleable name="AwesomeBar">
        <attr name="bar_primaryColor" format="color" />
        <attr name="bar_primaryDarkColor" format="color" />
        <attr name="bar_animatedIcons" format="boolean" />
        <attr name="bar_actionsColor" format="color" />
    </declare-styleable>


    <declare-styleable name="EditCodeView">
        <attr name="textSize" format="dimension" />
        <attr name="textColor" format="color" />
        <attr name="codeLength" format="integer" />
        <attr name="codeHiddenMode" format="boolean" />
        <attr name="codeHiddenMask" format="string" />
        <attr name="underlineStroke" format="dimension" />
        <attr name="underlineReductionScale" format="float" />
        <attr name="underlineFilledColor" format="color" />
        <attr name="underlineSelectedColor" format="color" />
        <attr name="underlineBaseColor" format="color" />
        <attr name="underlineCursorColor" format="color" />
        <attr name="underlineCursorEnabled" format="boolean" />
        <attr name="codeTextStyle">
            <enum name="normal" value="0" />
            <enum name="bold" value="1" />
            <enum name="italic" value="2" />
            <enum name="bold_italic" value="3" />
        </attr>
    </declare-styleable>

</resources>